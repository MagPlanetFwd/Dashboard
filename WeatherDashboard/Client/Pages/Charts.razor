@page "/charts"

@using ValueType = Syncfusion.Blazor.Charts.ValueType;
@using WeatherDashboard.Shared.Models

@inherits ChartsBase

<SfChart Title="Daily Highs (&deg;C) - Past 7 Days">
    <ChartPrimaryXAxis IntervalType="IntervalType.Days"
                       LabelFormat="MM/dd"
                       ValueType="ValueType.DateTime">
    </ChartPrimaryXAxis>
    <ChartSeriesCollection>
        @foreach (var source in Sources)
        {
            <ChartSeries DataSource="source.DailyWeathers"
                         Name="@source.City"
                         XName="@nameof(DailyWeather.Date)"
                         YName="@nameof(DailyWeather.High)"
                         Type="ChartSeriesType.Line">
                <ChartMarker Visible="true" Height="10" Width="10" />
            </ChartSeries>
        }
        <ChartLegendSettings Visible="true"></ChartLegendSettings>
    </ChartSeriesCollection>
</SfChart>
