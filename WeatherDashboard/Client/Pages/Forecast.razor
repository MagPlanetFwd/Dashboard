@page "/forecast"
@using ViewModels
@inherits ForecastBase

<h1>Three-day Weather Forecasts (&deg;C)</h1>

@if (Forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
<DxDataGrid Data="@Forecasts"
            ShowPager="false">
    <DxDataGridColumn Field="@nameof(WeatherGridRow.City)">
    </DxDataGridColumn>
    <DxDataGridColumn Caption="Today"
                      AllowSort="false"
                      >
        <DisplayTemplate>
            <table>
                <tr>
                    <td>
                        <img src="@((context as WeatherGridRow).Today.Icon)"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Lo: </b>@((context as WeatherGridRow).Today.Low)
                    </td>
                    <td>
                        <b>Hi: </b>@((context as WeatherGridRow).Today.High)
                    </td>
                </tr>
            </table>
        </DisplayTemplate>
    </DxDataGridColumn>
    <DxDataGridColumn Caption="Tomorrow"
                      AllowSort="false">
        <DisplayTemplate>
            <table>
                <tr>
                    <td>
                        <img src="@((context as WeatherGridRow).Tomorrow.Icon)" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Lo: </b>@((context as WeatherGridRow).Tomorrow.Low)
                    </td>
                    <td>
                        <b>Hi: </b>@((context as WeatherGridRow).Tomorrow.High)
                    </td>
                </tr>
            </table>
        </DisplayTemplate>
    </DxDataGridColumn>
    <DxDataGridColumn Caption="@DateTime.Today.AddDays(2).ToString("MM/dd")"
                      AllowSort="false">
        <DisplayTemplate>
            <table>
                <tr>
                    <td>
                        <img src="@((context as WeatherGridRow).ThirdDay.Icon)" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>Lo: </b>@((context as WeatherGridRow).ThirdDay.Low)
                    </td>
                    <td>
                        <b>Hi: </b>@((context as WeatherGridRow).ThirdDay.High)
                    </td>
                </tr>
            </table>
        </DisplayTemplate>
    </DxDataGridColumn>
</DxDataGrid>
}
