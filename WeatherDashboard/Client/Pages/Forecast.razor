@page "/forecast"
@inherits ForecastBase

<h1>Three-day Weather Forecasts (C)</h1>

@if (Forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Location</th>
                <th>Today</th>
                <th>Tomorrow</th>
                <th>@DateTime.Today.AddDays(2).ToString("MM/dd")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in Forecasts)
            {
                <tr>
                    <td>@forecast.City</td>
                    <td>@forecast.Today</td>
                    <td>@forecast.Tomorrow</td>
                    <td>@forecast.ThirdDay</td>
                </tr>
            }
        </tbody>
    </table>
}
